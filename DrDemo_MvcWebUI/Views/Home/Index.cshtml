                        <a class="nav-link active" aria-current="page" href="~/Book/Index">Kitaplar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4">Kategoriler</h1>

